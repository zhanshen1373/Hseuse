<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="300dp"
    android:minHeight="300dp"
    android:orientation="vertical"
    tools:context=".ui.worktask.DialogActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cornerrectangle"
            android:gravity="center"
            android:padding="10dp"
            android:text="申请人:"
            android:layout_margin="10dp"/>
        <EditText
            android:id="@+id/sp_sqr_edittext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="13sp"
            android:layout_marginLeft="25dp"
            android:layout_margin="10dp"
            android:hint="刷卡/手填"
            android:gravity="center"
            android:background="@drawable/rectangle2"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cornerrectangle"
            android:gravity="center"
            android:padding="10dp"
            android:text="属地负责人:"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/sp_sdfzr_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="13sp"
            android:layout_marginLeft="25dp"
            android:layout_margin="10dp"
            android:hint="刷卡"
            android:gravity="center"
            android:editable="false"
            android:background="@drawable/rectangle2"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cornerrectangle"
            android:gravity="center"
            android:padding="10dp"
            android:text="HSE工程师:"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/sp_engineer_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="13sp"
            android:layout_marginLeft="25dp"
            android:layout_margin="10dp"
            android:hint="刷卡"
            android:gravity="center"
            android:editable="false"
            android:background="@drawable/rectangle2"
            />

    </LinearLayout>

    <Button
        android:id="@+id/commit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@color/hd_hse_common_component_phone_actionbar_background"
        android:text="确 定"
        android:textColor="@color/hd_hse_common_white" />

</LinearLayout>