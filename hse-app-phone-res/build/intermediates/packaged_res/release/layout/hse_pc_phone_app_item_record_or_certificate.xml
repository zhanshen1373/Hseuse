<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/hse_pc_phone_app_item_person_check_parent_paddingbottom"
        android:paddingTop="@dimen/hse_pc_phone_app_item_person_check_parent_paddingtop" >

        <TextView
            android:id="@+id/hse_pc_phone_app_item_record_or_certificate_tv1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/hd_hse_common_component_phone_fontnum"
            android:textSize="@dimen/hd_common_textsize" />

        <TextView
            android:id="@+id/hse_pc_phone_app_item_record_or_certificate_tv2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
             android:gravity="center"
            android:textColor="@color/hd_hse_common_component_phone_fontnum"
            android:textSize="@dimen/hd_common_textsize" />
    </LinearLayout>
    

</LinearLayout>
