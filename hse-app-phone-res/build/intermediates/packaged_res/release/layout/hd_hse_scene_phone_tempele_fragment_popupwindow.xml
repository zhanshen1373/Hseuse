<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_xxlarge"
        android:background="@drawable/hd_hse_common_corner_back"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:gravity="center"
            android:text="添加用电设备"
            android:textColor="@color/hd_hse_common_bule_title_text_color"
            android:textSize="@dimen/text_size_large" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/padding_large" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="设备名称"
                android:textSize="@dimen/text_size_medium" />

            <EditText
                android:id="@+id/hd_hse_scene_phone_tempele_fragment_popupwindow_ed_sb_name"
                android:layout_width="0dp"
                android:layout_height="@dimen/hd_hse_scene_phone_tempele_fragment_popupwindow_item_height"
                android:layout_weight="2"
                android:background="@drawable/hd_hse_common_edit_style"
                android:textSize="@dimen/text_size_medium"
                android:paddingLeft="@dimen/padding_small" 
                android:paddingRight="@dimen/padding_small"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/padding_large" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="型号规格"
                android:textSize="@dimen/text_size_medium" />

            <EditText
                android:id="@+id/hd_hse_scene_phone_tempele_fragment_popupwindow_ed_xhgg"
                android:layout_width="0dp"
                android:layout_height="@dimen/hd_hse_scene_phone_tempele_fragment_popupwindow_item_height"
                android:layout_weight="2"
                android:background="@drawable/hd_hse_common_edit_style"
                android:textSize="@dimen/text_size_medium"
                android:paddingLeft="@dimen/padding_small" 
                android:paddingRight="@dimen/padding_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/padding_large" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="功率"
                android:textSize="@dimen/text_size_medium" />

            <EditText
                android:id="@+id/hd_hse_scene_phone_tempele_fragment_popupwindow_ed_gl"
                android:layout_width="0dp"
                android:layout_height="@dimen/hd_hse_scene_phone_tempele_fragment_popupwindow_item_height"
                android:layout_weight="2"
                android:background="@drawable/hd_hse_common_edit_style"
                android:inputType="numberDecimal"
                android:textSize="@dimen/text_size_medium" 
                android:paddingLeft="@dimen/padding_small" 
                android:paddingRight="@dimen/padding_small"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/padding_large" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="数量"
                android:textSize="@dimen/text_size_medium" />

            <EditText
                android:id="@+id/hd_hse_scene_phone_tempele_fragment_popupwindow_ed_count"
                android:layout_width="0dp"
                android:layout_height="@dimen/hd_hse_scene_phone_tempele_fragment_popupwindow_item_height"
                android:layout_weight="2"
                android:background="@drawable/hd_hse_common_edit_style"
                android:inputType="number"
                android:textSize="@dimen/text_size_medium"
                android:paddingLeft="@dimen/padding_small" 
                android:paddingRight="@dimen/padding_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_xlarge"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/hd_hse_scene_phone_tempele_fragment_popupwindow_tv_entrue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_medium"
                android:paddingLeft="@dimen/padding_large"
                android:paddingRight="@dimen/padding_large"
                android:paddingTop="@dimen/padding_medium"
                android:paddingBottom="@dimen/padding_medium"
                android:text="确定"
                android:textSize="@dimen/text_size_small"
                android:background="@drawable/hd_common_btn_white_to_gray_click_selector" />

            <TextView
                android:id="@+id/hd_hse_scene_phone_tempele_fragment_popupwindow_tv_cancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_medium"
                android:paddingLeft="@dimen/padding_large"
                android:paddingRight="@dimen/padding_large"
                android:paddingTop="@dimen/padding_medium"
                android:paddingBottom="@dimen/padding_medium"
                android:text="取消"
                android:textSize="@dimen/text_size_small"
                android:background="@drawable/hd_common_btn_white_to_gray_click_selector" />

            <TextView
                android:id="@+id/hd_hse_scene_phone_tempele_fragment_popupwindow_tv_dele"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_medium"
                android:paddingLeft="@dimen/padding_large"
                android:paddingRight="@dimen/padding_large"
                android:paddingTop="@dimen/padding_medium"
                android:paddingBottom="@dimen/padding_medium"
                android:text="删除"
                android:textSize="@dimen/text_size_small" 
                android:background="@drawable/hd_common_btn_white_to_gray_click_selector"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>