<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hd_hse_common_module_phone_remote_appr_brower_layout_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/hd_common_component_readcard_sk_height"
        android:orientation="horizontal">

        <!-- 左边图标 -->

        <ImageView
            android:id="@+id/hd_hse_common_module_phone_remote_appr_brower_layout_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:scaleType="center"
            android:src="@drawable/hd_hse_common_module_zyplist_group_icon_selector" />

        <TextView
            android:id="@+id/hd_hse_common_module_phone_remote_appr_brower_layout_tv_select_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_medium"
            android:background="@drawable/hd_common_btn_white_to_gray_click_selector"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/padding_small"
            android:paddingLeft="@dimen/padding_medium"
            android:paddingRight="@dimen/padding_medium"
            android:paddingTop="@dimen/padding_small"
            android:text="选择"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/hd_hse_common_module_phone_remote_appr_brower_layout_tv_appr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_toLeftOf="@+id/hd_hse_common_module_phone_remote_appr_brower_layout_tv_select_cancle"
            android:background="@drawable/hd_common_btn_white_to_gray_click_selector"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/padding_small"
            android:paddingLeft="@dimen/padding_medium"
            android:paddingRight="@dimen/padding_medium"
            android:paddingTop="@dimen/padding_small"
            android:text="审批"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_large"
            android:visibility="invisible" />
        <!-- 中间文字 -->

        <TextView
            android:id="@+id/hd_hse_common_module_phone_remote_appr_brower_layout_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/hd_hse_common_module_phone_remote_appr_brower_layout_tv_appr"
            android:layout_toRightOf="@+id/hd_hse_common_module_phone_remote_appr_brower_layout_img"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@drawable/hd_common_text_selector"
            android:textSize="@dimen/text_size_medium" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/margin_medium"
        android:background="@color/gray" />

    <GridView
        android:id="@+id/hd_hse_common_module_phone_remote_appr_brower_layout_gv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="1dp"
        android:numColumns="4"
        android:padding="1dp"></GridView>

</LinearLayout>