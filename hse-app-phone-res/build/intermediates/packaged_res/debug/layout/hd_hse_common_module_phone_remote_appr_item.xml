<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:orientation="vertical"
    android:padding="@dimen/hse_pc_phone_app_layout_surveillance_padding" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/hse_pc_phone_app_layout_surveillance_item_height" >

        <TextView
            android:id="@+id/hd_hse_common_module_phone_remote_appr_item_tv_gw"
            android:layout_width="@dimen/hd_hse_common_energyIsolation_edit_width"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:paddingRight="@dimen/padding_small"
            android:text="质量安全 :"
            android:textColor="@color/hd_hse_common_describetext_gray"
            android:textSize="@dimen/hd_common_textsize" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/hd_hse_common_module_phone_remote_appr_item_tv_appr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/hd_common_edittext_bg"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/hse_pc_phone_app_layout_surveillance_item_edittext_paddinglefght"
                android:textColor="@color/hd_hse_common_component_phone_fontnum"
                android:textSize="@dimen/hd_common_textsize" />

            <ImageView
                android:id="@+id/hd_hse_common_module_phone_remote_appr_item_img_add"
                android:layout_width="@dimen/hse_pc_phone_app_layout_surveillance_item_height"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:focusable="true"
                android:src="@drawable/hd_hse_photo_add" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>