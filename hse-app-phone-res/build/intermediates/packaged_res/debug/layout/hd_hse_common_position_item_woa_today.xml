<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hd_hse_common_position_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:gravity="center"
    android:background="@drawable/hd_common_item_style"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/hd_hse_common_position_item_tv_woa_today_lable"
        android:layout_width="0dp"
        android:layout_weight = "1"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:background="@drawable/hd_common_item_style"
        android:padding="@dimen/padding_medium"
        android:textSize="@dimen/text_size_medium" />
    <TextView
        android:id="@+id/hd_hse_common_position_item_tv_woa_today_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight = "2"
        android:gravity="center"
        android:background="@drawable/hd_common_item_style"
        android:padding="@dimen/padding_medium"
        android:textSize="@dimen/text_size_medium" />

</LinearLayout>