<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/hd_hse_common_module_phone_gases_check_row"
    android:layout_marginBottom="3dp"
    android:layout_marginTop="3dp" >

    <Spinner
        android:id="@+id/hd_hse_common_module_gases_check_concentration_row_spinner"
        style="@style/hd_hse_common_module_phone_gases_check_col1"
        android:layout_column="1"
        android:dropDownWidth="250dp"
        android:ems="10"
        android:gravity="center_vertical" />

    <EditText
        android:id="@+id/hd_hse_common_module_gases_check_concentration_value_row_et"
        style="@style/hd_hse_common_module_phone_gases_check_col2" >
    </EditText>

    <TextView
        android:id="@+id/hd_hse_common_module_gases_check_concentration_value_row_tv"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:text="合格"
        android:textSize="@dimen/text_size_small"
        android:visibility="gone"/>

</TableRow>