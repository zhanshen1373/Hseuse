        <Button
            android:id="@+id/tv_position_save"
            android:layout_columnSpan="3"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/query_btn_bg"
            android:text="保  存"
            android:textColor="#ffffff" />
    </GridLayout>

</RelativeLayout>