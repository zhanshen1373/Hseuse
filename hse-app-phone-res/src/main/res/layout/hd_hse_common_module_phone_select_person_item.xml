<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding_small"
        android:paddingTop="@dimen/padding_small" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/padding_medium" >

            <CheckBox
                android:id="@+id/hd_hse_common_module_phone_select_person_item_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:layout_centerInParent="true"
                android:focusable="false" />
        </RelativeLayout>

        <TextView
            android:id="@+id/hd_hse_common_module_phone_select_person_item_tv_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:padding="@dimen/padding_medium"
            android:text="员工编码"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/hd_hse_common_module_phone_select_person_item_tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:padding="@dimen/padding_medium"
            android:text="姓名"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/hd_hse_common_module_phone_select_person_item_tv_dept"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:padding="@dimen/padding_medium"
            android:text="部门"
            android:textSize="@dimen/text_size_medium" />
    </LinearLayout>

</LinearLayout>